# ====================
# Ventros CRM - Environment Variables (EXAMPLE)
# ====================
# Copy this file to .env and adjust the values for your environment

# ====================
# Application Settings
# ====================
PORT=8080
ENV=development
LOG_LEVEL=debug

# ====================
# Database (PostgreSQL)
# ====================
DB_HOST=localhost
DB_PORT=5432
DB_USER=ventros
DB_PASSWORD=ventros123
DB_NAME=ventros_crm
DB_SSLMODE=disable

# PostgreSQL Container Settings
POSTGRES_USER=ventros
POSTGRES_PASSWORD=ventros123
POSTGRES_DB=ventros_crm

# ====================
# Message Queue (RabbitMQ)
# ====================
RABBITMQ_URL=amqp://guest:guest@localhost:5672/
RABBITMQ_DEFAULT_USER=guest
RABBITMQ_DEFAULT_PASS=guest

# ====================
# Cache (Redis)
# ====================
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# ====================
# Workflow Engine (Temporal)
# ====================
TEMPORAL_HOST=localhost:7233
TEMPORAL_NAMESPACE=default
TEMPORAL_ADDRESS=temporal:7233
TEMPORAL_CORS_ORIGINS=http://localhost:3000

# Temporal Container Settings
DB=postgres12_pgx
POSTGRES_SEEDS=postgres

# ====================
# WAHA Configuration (WhatsApp HTTP API)
# ====================
WAHA_BASE_URL=https://waha.ventros.cloud
WAHA_API_KEY=your_waha_api_key_here

# ====================
# Admin User (Initial Setup)
# ====================
ADMIN_EMAIL=admin@ventros.com
ADMIN_PASSWORD=admin123
ADMIN_NAME=Administrator

# ====================
# Container Settings
# ====================
# Docker Images
POSTGRES_IMAGE=docker.io/library/postgres:16-alpine
RABBITMQ_IMAGE=docker.io/library/rabbitmq:3.13-management-alpine
REDIS_IMAGE=docker.io/library/redis:7-alpine
TEMPORAL_IMAGE=docker.io/temporalio/auto-setup:1.24.2
TEMPORAL_UI_IMAGE=docker.io/temporalio/ui:2.26.2

# Container Names
POSTGRES_CONTAINER_NAME=ventros-postgres
RABBITMQ_CONTAINER_NAME=ventros-rabbitmq
REDIS_CONTAINER_NAME=ventros-redis
TEMPORAL_CONTAINER_NAME=ventros-temporal
TEMPORAL_UI_CONTAINER_NAME=ventros-temporal-ui
API_CONTAINER_NAME=ventros-api

# Ports
POSTGRES_PORT_HOST=5432
POSTGRES_PORT_CONTAINER=5432
RABBITMQ_PORT_HOST=5672
RABBITMQ_MANAGEMENT_PORT_HOST=15672
RABBITMQ_PORT_CONTAINER=5672
RABBITMQ_MANAGEMENT_PORT_CONTAINER=15672
REDIS_PORT_HOST=6379
REDIS_PORT_CONTAINER=6379
TEMPORAL_PORT_HOST=7233
TEMPORAL_PORT_CONTAINER=7233
TEMPORAL_UI_PORT_HOST=8088
TEMPORAL_UI_PORT_CONTAINER=8080
API_PORT_HOST=8080
API_PORT_CONTAINER=8080

# Volumes
POSTGRES_VOLUME=postgres_data
RABBITMQ_VOLUME=rabbitmq_data
REDIS_VOLUME=redis_data
TEMPORAL_VOLUME=temporal_data

# Network
NETWORK_NAME=ventros-network
